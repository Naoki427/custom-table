# Test Environment Configuration
# Different ports to avoid conflicts with development environment

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/sou-hyou-test?authSource=admin

# MongoDB Docker Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=sou-hyou-test

# GraphQL Configuration (Using port 4001 for tests)
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4001/graphql

# Firebase Configuration (Add your Firebase config here)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Server Configuration (Using port 4001 for tests)
PORT=4001
NODE_ENV=test

# JWT Secret (Generate a secure random string)
JWT_SECRET=test_jwt_secret_here

# CORS Configuration (Using port 3001 for tests)
CORS_ORIGIN=http://localhost:3001